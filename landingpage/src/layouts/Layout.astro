---
import '../styles/global.css';

interface Props {
	title: string;
    description?: string;
}

const { title, description = "Stripped-down version of Murder32 for ESP32 Dev Boards." } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&family=Space+Grotesk:wght@300;400;500;600;700&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body class="antialiased bg-background text-foreground font-sans overflow-hidden h-screen w-screen flex flex-col bg-grid">
		<main class="flex-1 flex flex-col items-center justify-center w-full max-w-7xl mx-auto px-4 relative h-full overflow-hidden">
			<slot />
		</main>
        
        <footer class="w-full text-center py-4 text-[10px] text-muted-foreground z-10 absolute bottom-0 left-0 right-0 pointer-events-none">
            <p>
                Made by <a href="https://github.com/jR4dh3y" target="_blank" rel="noopener noreferrer" class="text-foreground hover:text-secondary pointer-events-auto transition-colors">jR4dh3y</a>
                <span class="mx-2 opacity-30">|</span>
                Based on <a href="https://github.com/justcallmekoko/ESP32Marauder" target="_blank" rel="noopener noreferrer" class="text-foreground hover:text-destructive pointer-events-auto transition-colors">Murder32</a>
            </p>
        </footer>
	</body>
</html>
