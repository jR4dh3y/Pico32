---
import PicoLogo from './PicoLogo.astro';
import { ArrowRight, Github, Terminal } from 'lucide-astro';
---

<!-- Left Section: Branding & Features -->
<div class="flex-1 flex flex-col items-start justify-center space-y-8 w-full">
    
    <!-- Branding -->
    <div class="flex flex-col items-start">
        <div class="mb-6">
           <PicoLogo />
        </div>
        <p class="text-xl text-muted-foreground max-w-lg leading-relaxed font-sans mt-2">
            A minimal WiFi & Bluetooth penetration testing toolkit for ESP32.
        </p>
    </div>

    <!-- Actions -->
    <div class="flex flex-row gap-4 w-full max-w-md">
        <button id="init-btn" class="group flex-1 flex items-center justify-center gap-2 bg-secondary hover:bg-secondary/90 text-secondary-foreground px-6 py-3 rounded-lg font-bold text-sm tracking-wide transition-all shadow-[0_0_20px_-5px_rgba(195,251,91,0.3)] hover:shadow-[0_0_30px_-5px_rgba(195,251,91,0.5)] transform hover:-translate-y-0.5 cursor-pointer">
            <span>DOWNLOAD</span>
            <ArrowRight class="w-4 h-4 group-hover:translate-x-1 transition-transform" />
        </button>
        <a href="https://github.com/jR4dh3y/Pico32" target="_blank" rel="noopener noreferrer" class="flex-1 flex items-center justify-center gap-2 bg-transparent hover:bg-muted text-foreground border border-border px-6 py-3 rounded-lg font-medium text-sm tracking-wide transition-colors">
            <Github class="w-4 h-4" />
            <span>SOURCE</span>
        </a>
    </div>

    <!-- Serial Terminal Feature Highlight -->
    <div class="w-full max-w-md pt-6 border-t border-border/30">
        <div class="relative flex items-center gap-4 p-4 rounded-lg bg-card/30 border border-border/50 group cursor-help transition-colors hover:bg-card/50 hover:border-primary/30">
            <div class="p-2.5 rounded bg-primary/10 text-primary">
                <Terminal class="w-6 h-6" />
            </div>
            <div>
                <h3 class="text-sm font-bold font-mono text-foreground uppercase tracking-wider mb-1">Serial Terminal Interface</h3>
                <p class="text-xs text-muted-foreground">Controlled entirely via USB serial connection. No screen required.</p>
            </div>
            
            <!-- Hover Card: Screenshot -->
            <div class="absolute left-1/2 -translate-x-1/2 bottom-full mb-4 w-[300px] opacity-0 translate-y-2 pointer-events-none transition-all duration-300 group-hover:opacity-100 group-hover:translate-y-0 z-50">
                <img src="/ss.png" alt="Interface Screenshot" class="w-full h-auto rounded-lg shadow-2xl" />
            </div>
        </div>
    </div>
</div>
