---
import { Cpu, Package, Code } from 'lucide-astro';
---

<!-- Right Section: Hardware & Specs -->
<div class="flex-1 w-full flex flex-col items-center md:items-end justify-center hidden md:flex">
    <div class="relative w-full max-w-md bg-card/30 border border-border rounded-xl p-6 md:p-8 backdrop-blur-sm">
        <!-- Hardware Header -->
        <div class="mb-6 border-b border-border/50 pb-4">
                <p class="text-xs uppercase tracking-[0.2em] text-primary mb-2 font-mono">// HARDWARE_TARGET</p>
                <h2 class="text-2xl font-bold text-foreground">Minimal Requirements</h2>
        </div>

        <!-- Hardware Specs Grid -->
        <div class="space-y-4">
            <div class="relative flex items-start gap-4 p-3 rounded bg-background/50 border border-border hover:border-primary/30 transition-colors group cursor-help">
                <div class="w-10 h-10 flex items-center justify-center bg-primary/10 border border-primary/20 rounded shrink-0 group-hover:bg-primary/20 transition-colors">
                    <Cpu class="w-5 h-5 text-primary" />
                </div>
                <div>
                    <h4 class="font-bold text-sm text-foreground mb-0.5 font-mono">ESP32 Dev Module</h4>
                    <p class="text-xs text-muted-foreground">240MHz Dual-Core, 4MB Flash</p>
                </div>

                <!-- Hover Card: Board Image -->
                <div class="absolute right-full mr-4 top-1/2 -translate-y-1/2 w-[200px] opacity-0 translate-x-2 pointer-events-none transition-all duration-300 group-hover:opacity-100 group-hover:translate-x-0 z-50">
                    <img src="/board.jpeg" alt="ESP32 Board" class="w-full h-auto rounded-lg shadow-2xl" />
                </div>
            </div>

            <div class="flex items-start gap-4 p-3 rounded bg-background/50 border border-border hover:border-secondary/30 transition-colors group">
                <div class="w-10 h-10 flex items-center justify-center bg-secondary/10 border border-secondary/20 rounded shrink-0 group-hover:bg-secondary/20 transition-colors">
                    <Package class="w-5 h-5 text-secondary" />
                </div>
                <div>
                    <h4 class="font-bold text-sm text-foreground mb-0.5 font-mono">~1MB Firmware</h4>
                    <p class="text-xs text-muted-foreground">Compressed & OTA Ready</p>
                </div>
            </div>

            <div class="flex items-start gap-4 p-3 rounded bg-background/50 border border-border hover:border-destructive/30 transition-colors group">
                <div class="w-10 h-10 flex items-center justify-center bg-destructive/10 border border-destructive/20 rounded shrink-0 group-hover:bg-destructive/20 transition-colors">
                    <Code class="w-5 h-5 text-destructive" />
                </div>
                <div>
                    <h4 class="font-bold text-sm text-foreground mb-0.5 font-mono">Serial @ 115200</h4>
                    <p class="text-xs text-muted-foreground">Universal ANSI Terminal Support</p>
                </div>
            </div>
        </div>

        <!-- Decorative Elements -->
        <div class="absolute -right-2 -top-2 w-20 h-20 border-t border-r border-primary/20 rounded-tr-xl pointer-events-none"></div>
        <div class="absolute -left-2 -bottom-2 w-20 h-20 border-b border-l border-primary/20 rounded-bl-xl pointer-events-none"></div>
    </div>
</div>
